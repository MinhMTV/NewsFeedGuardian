<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="newsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColorTitle</item>
        <item name="android:textSize">@dimen/textTitlesize</item>
    </style>

    <style name="newscategorie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/textColorCategorie</item>
        <item name="android:textSize">@dimen/categoriesize</item>
    </style>

    <style name="authorstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">italic</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/textColorauthor</item>
        <item name="android:textSize">@dimen/datesize</item>
    </style>

    <style name="datestyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/textColordate</item>
        <item name="android:textSize">@dimen/datesize</item>
    </style>


</resources>

